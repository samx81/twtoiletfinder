<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/infotoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@drawable/gradient"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@android:dimen/notification_large_icon_height">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fillViewport="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="2"
                    android:paddingLeft="@dimen/nav_header_vertical_spacing"
                    android:paddingRight="@dimen/nav_header_vertical_spacing"
                    android:rowCount="7">

                    <TextView
                        android:id="@+id/namemark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="fill_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:text="種類"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/level_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="寺廟教堂等宗教活動場所"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/type_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="優等級"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/citymark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:text="區域"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/citytext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/addressmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:text="地址"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/adminmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:text="管轄"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/legmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:text="數量"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/addrtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="2"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/owntext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="3"
                        android:text="TextView"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/typemark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:text="屬性"
                        android:textSize="18sp" />

                    <RatingBar
                        android:id="@+id/rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="6"
                        android:numStars="5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="5"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/type22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/level_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="尚無資料"
                            android:textSize="18sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/mannum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/restroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="男廁"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/wrnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/childroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="女廁"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/krnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/kindlyroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="親子廁"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/rrnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/restroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="無障礙"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="4"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/type2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/level_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="尚無資料"
                            android:textSize="18sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/Restroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/restroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="男廁"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/women"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/childroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="女廁"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/Kindlyroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/kindlyroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="親子廁"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/restroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/restroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="無障礙"
                            android:textSize="18sp" />
                    </LinearLayout>
                </GridLayout>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:ems="10"
                    android:hint="我要評價"
                    android:inputType="textMultiLine"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin" />

                <Button
                    android:id="@+id/btn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/submit"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:text="提交"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:context="tw.sam.toiletfinder.DataInfo"
            tools:layout="@layout/activity_add_item"
            tools:showIn="@layout/activity_data_info" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
